{
  "attribute": "_EHR/prescriptions",
  "foreach": "$[*]",
  "filter_by": {
    "field": "status",
    "value": "active"
  },
  "template": {
    "title": "{$.medication_name}",
    "subtitle": "{$.dosage} - {$.frequency}",
    "prescriber": "Prescribed by {$.prescriber.name}, {$.prescriber.specialty}",
    "refill_count": "{len($.refills)} refill(s) on record",
    "?last_refill": "{format_date($.refills[-1].refill_date, '%b %d, %Y')}",
    "?pharmacy": "{$.refills[-1].pharmacy.name}",
    "status": "{$.status}"
  }
}
